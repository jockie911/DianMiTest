<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    
    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>
   
<!--
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_celiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/celiang"
            android:gravity="center_horizontal"
            android:text="@string/home_measure"
            android:textColor="@drawable/home_bottom_text" />

        <RadioButton
            android:id="@+id/rb_chicun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/chicun"
            android:gravity="center_horizontal|bottom"
            android:text="@string/home_size"
            android:textColor="@drawable/home_bottom_text" />

        <RadioButton
            android:id="@+id/rb_youxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/youxi"
            android:gravity="center_horizontal|bottom"
            android:text="@string/home_game"
            android:textColor="@drawable/home_bottom_text" />

        <RadioButton
            android:id="@+id/rb_dingzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/dingzhi"
            android:gravity="center_horizontal|bottom"
            android:text="@string/home_dizhi"
            android:textColor="@drawable/home_bottom_text" />
        <RadioButton
            android:id="@+id/rb_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/shop"
            android:gravity="center_horizontal|bottom"
            android:text="@string/home_shop"
            android:textColor="@drawable/home_bottom_text" />
    </RadioGroup>

</LinearLayout>