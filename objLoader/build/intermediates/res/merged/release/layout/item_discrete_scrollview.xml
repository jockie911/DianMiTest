<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/item_iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/item_tv_gender"
        android:layout_width="45dp"
        android:singleLine="true"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        tools:text="å¥³"
        android:textColor="@color/white" />
    <RelativeLayout
        android:id="@+id/item_rel_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/item_iv_top">
        <ImageView
            android:id="@+id/temp_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/prompt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:translationY="-5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/temp_iv"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:translationY="-5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/tips_for_measure"/>
    </RelativeLayout>
</RelativeLayout>