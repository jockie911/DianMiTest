<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_deep"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/base_title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_base_deep"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/color_base"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <com.example.objLoader.wedgit.CircleImageView
            android:id="@+id/ivPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_default"
            app:border_color="@color/color_base"
            app:border_width="2dp" />
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPic"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:textColor="@color/title"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_change_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:background="@color/color_base">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/login_pwd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="@string/account_info_username"
            android:gravity="center_vertical"
            android:textColor="@color/title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/jinru" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:textColor="@color/title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_base">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/login_pwd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="@string/account_info_change_pwd"
            style="@style/account_info_tv"/>
    </RelativeLayout>
    <View
        android:layout_width="15dp"
        android:layout_height="0.5dp"
        android:background="@color/color_base"/>

    <RelativeLayout
        android:id="@+id/rl_measure_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/measure_record"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="@string/account_info_measure_record"
            style="@style/account_info_tv" />
    </RelativeLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="0.5dp"
        android:background="@color/color_base"/>

    <RelativeLayout
        android:id="@+id/rl_measure_prorecord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/measure_protocol" />
        <TextView
            android:text="@string/account_info_measure_protocol"
            style="@style/account_info_tv" />
    </RelativeLayout>


    <View
        android:layout_width="15dp"
        android:layout_height="0.5dp"
        android:background="@color/color_base"/>

    <RelativeLayout
        android:id="@+id/rel_clear_cash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/clear_cache" />
        <TextView
            android:text="@string/your_clear_cash"
            style="@style/account_info_tv" />
        <TextView
            android:id="@+id/tv_clear_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/title"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/measure_protocol" />
        <TextView
            android:text="@string/setting"
            style="@style/account_info_tv" />
    </RelativeLayout>

</LinearLayout>