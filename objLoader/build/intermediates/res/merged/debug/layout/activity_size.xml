    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_details_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/size_size"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/size_details"
            android:textColor="@drawable/size_bottom_text" />

        <RadioButton
            android:id="@+id/rb_mate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/size_null"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/size_mate"
            android:textColor="@drawable/size_bottom_text" />

        <RadioButton
            android:id="@+id/rb_model"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/size_model"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/size_model"
            android:textColor="@drawable/size_bottom_text" />

        <RadioButton
            android:id="@+id/rb_my_log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/size_log"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/size_my_log"
            android:textColor="@drawable/size_bottom_text" />
    </RadioGroup>

</LinearLayout>