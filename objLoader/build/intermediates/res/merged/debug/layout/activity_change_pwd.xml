<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_deep"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/base_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_pwd_old_pwd"
            android:textColor="@color/title"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/change_pwd_old_pwd"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/title"
            android:textColorHint="#9a9997" />

        <ImageView
            android:id="@+id/iv_eye_old_pws"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/closed_eye"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="15dp"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/tv_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_pwd_new_pwd"
            android:textColor="@color/title"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_toRightOf="@+id/tv_temp2"
            android:hint="@string/change_pwd_input_new_pwd"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/title"
            android:textColorHint="#9a9997" />
        <ImageView
            android:id="@+id/iv_eye_new_pws"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/closed_eye"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

</LinearLayout>